                  <% end %>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="mb-5 tab-pane fade " id="members" role="tabpanel" aria-labelledby="member-tab">
        <% @member_all.each.with_index(1) do |member, i| %>
