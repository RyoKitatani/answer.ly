
<ul class="nav nav-tabs nav-right" id="myTab" role="tablist">
  <li class="nav-item ml-auto">
    <a class="nav-link active" id="all-ranking-tab" data-toggle="tab" href="#all" role="tab" aria-controls="all" aria-selected="true">総合</a>
  </li>
  <li class="nav-item">
    <a class="nav-link link-text" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">月間</a>
  </li>
  <li class="nav-item">
    <a class="nav-link link-text" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">週間</a>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="all" role="tabpanel" aria-labelledby="all-ranking-tab">
    <% members.each do |member| %>
    <div class="all-ranking d-flex border-bottom mt-2">
      <div class="col-md-1">
        <p>1</p>
      </div>
      <div class="col-md-2 pl-0 pr-0">
        <p class="mr-1"><%= attachment_image_tag member, :image, size:"30x30", fallback:"no_image_icon.jpg"%></p>
      </div>
      <div class="col-md-4 pl-0">
        <%= link_to member_path(member), class:"link-text small", style:"font-size:3px;" do %>
          <%= member.name %>
        <% end %>
        <p>score <%= member.answer_likes.count %></p>
      </div>
      <div class="col-md-5 pl-0 ml-0">
        <% if member_signed_in? %>
          <% if current_member.id == member.id %>
            <%= link_to "プロフィールへ", member_path(member), method: :post, class:"btn btn-outline-secondary", style:"font-size:5px; width:100%" %>
          <% else %>
            <% if current_member.following?(member) %>
              <%= link_to 'フォロー外す', unfollow_path(member), method: :post, class:"btn btn-danger", style:"font-size:5px; width:100%" %>
            <% else %>
              <%= link_to "フォローする", follow_path(member), method: :post, class:"btn btn-primary", style:"font-size:5px; width:100%" %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
    <% end %>
    <%= link_to "ランキング一覧へ", "#", class:"link-text" %>
  </div>
  <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">...</div>
  <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">...</div>
</div>
