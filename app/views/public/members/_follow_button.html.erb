<% if current_member.following?(member) %>
  <%= link_to unfollow_path(member), method: :post, class:"btn btn-danger btn-block mt-3 mb-2", style: "font-size:4px;" , remote: true, "data-turbolinks": false do %>
  <i class="fas fa-user-times">解除</i>
  <% end %>
<% else %>
  <%= link_to follow_path(member), method: :post, class:"btn btn-primary btn-block mt-3 mb-2", style:"font-size:4px;", remote: true, "data-turbolinks": false do %>
    <i class="fas fa-user-plus">フォロー</i>
  <% end %>
<% end %>