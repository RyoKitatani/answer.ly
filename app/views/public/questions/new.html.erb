<div class="col-md-8 offset-md-2 mt-5 mb-5">
  <%= form_with model: @question, local: true do |f| %>
    <div class="form-group">
　　　<p><%= f.label :質問タイトル %></p>
      <%= f.text_field :title, placeholder: "タイトルを記入しましょう。", class:"form-control w-100" %>
    </div>
    <div class="form-group">
      <p><%= f.label :タグ %></p>
      <%= f.collection_select :name, Tag.all, :name, :name, class:"form-control", prompt:"この中からタグを1つ選んでください。" %>
    </div>
    <div class="form-group">
      <p><%= f.label :質問内容 %></p>
      <p><%= f.text_area :content, class:"form-control w-100", 'data-provider': :summernote %></p>
    </div>
    <div class="form-action">
      <%= f.submit "質問する", class:"btn btn-success w-100" %>
    </div>
  <% end %>
</div>

