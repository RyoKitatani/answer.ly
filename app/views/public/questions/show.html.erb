<div class="row mx-auto">
  <div class="question-title w-100 pt-3 pb-3 border border-black-3">
  <span class="root-link "><%= link_to "Answer.lyトップ", tag_path(tag) %></span>
</div>
</div>
<div class="question-title">
  <div class="container">
    <div class= "row">
      <div class="col-md-9 pt-5">
        <h1 class="font-weight-bold"><%= @question.title %></h1>
        <p class="mt-5 mb-5"><%= @question.created_at %> | <%= @question.updated_at %></p>
      </div>
      <div class="col-md-3 pt-5">
        <div class="text-center">
          <p class="btn btn-light">コメント数：<%= @question.answers.count %></p>
          <p class="btn btn-light">評価：0</p>
          <p class="btn btn-light">VIEW：0</p>
        </div>
        <div class="mt-5 mb-5">
          <p class="font-weight-bold"><%= @question.member.image %><%= @question.member.name %> | score: <%= @question.question_likes.count %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-9 mt-5 mb-5">

      <!--質問内容表示-->
      <div class="border border-black-3">
        <%= render "public/questions/show", question: @question %>
      </div>
      <div class="mt-2 bottom-line border border-blck"></div>
      <!--ここまで-->

      <!--回答一覧表示-->
      <div class="mt-5">
        <%= render "public/answers/list", question: @question, answer_comment: @answer_comment , response: @response %>
      </div>
      <!--ここまで-->

      <!--回答フォーム-->
      <div class="row mt-5">
        <%= render "public/answers/new", question: @question, member: @member , answer: @answer %>
      </div>
      <!--ここまで-->
　　</div>

  　　<!--タグ一覧表示-->
    <div class="col-md-2">
      <div class="tag-index mb-5">
        <%= render "public/tags/list", tags: @tags %>
      </div>
    </div>
   　　<!--ここまで-->
  </div>
</div>
