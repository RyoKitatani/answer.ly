<div class= "row mx-auto">
  <div class="question-title w-100 pt-3 pb-3 border border-black-3">
  <span class="root-link"><%= link_to "Answer.lyトップ", tag_path(tag) %></span>
</div>
</div>
<div class="question-title">
  <div class="container">
    <div class= "row mx-auto ">
      <div class="col-md-9 pt-5">
        <h1 class="font-weight-bold"><%= @question.title %></h1>
        <p class="mt-5 mb-5"><%= @question.created_at %> | <%= @question.updated_at %></p>
      </div>
      <div class="col-md-3 pt-5">
        <div class="text-center">
          <p class="btn btn-light">コメント数：0</p>
          <p class="btn btn-light">評価：0</p>
          <p class="btn btn-light">VIEW：0</p>
        </div>
        <div class="mt-5 mb-5">
        <p class="font-weight-bold"><%= @question.member.image %><%= @question.member.name %> | score: <%= @question.question_likes.count %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
 <div class="row">
   <div class="col-md-9 mt-5">
     <div class="border border-black-3">
       <div class="questions-content">
         <h4><%= @question.content %></h4>
       </div>
       <div class="mt-5 d-flex">
         <div class="btn btn-primary mr-2"><i class="fas fa-thumbs-up">高評価</i></div>
         <%= link_to "編集する", edit_question_path, class:"btn btn-success ml-auto mr-2"%>
         <%= link_to "削除する", question_path, method: :delete, class:"btn btn-danger mr-2" %>
       </div>
     </div>
     <div class="mt-5">
       <h3>回答: <%= @question.answers.count %>件</h3>
     </div>
     <div class="mt-5 bottom-line border border-blck"></div>
     <div class="mt-5 bottom-line border border-blck"></div>
     <div class="answer-box">
       <%= form_with model: @answer, url:"answers_path", method: :post, local: true do |f| %>
       <% end %>
     </div>

   </div>
   <div class="col-md-3">
     <div class="tag-index mb-5">
      <%= render "public/tags/list", tags: @tags %>
     </div>
   </div>
</div>
</div>