<div class="row mx-auto">
  <div class="question-title w-100 pt-3 pb-3 border border-black-3">
  <span class="root-link "><%= link_to "Answer.lyトップ", tag_path(tag) %></span>
</div>
</div>
<div class="question-title">
  <div class="container">
    <div class= "row">
      <div class="col-md-9 pt-5">
        <h1 class="font-weight-bold"><%= @question.title %></h1>
        <p class="mt-5 mb-5"><%= @question.created_at %> | <%= @question.updated_at %></p>
      </div>
      <div class="col-md-3 pt-5">
        <div class="text-center">
          <p class="btn btn-light">コメント数：<%= @question.answers.count %></p>
          <p class="btn btn-light">評価：0</p>
          <p class="btn btn-light">VIEW：0</p>
        </div>
        <div class="mt-5 mb-5">
          <p class="font-weight-bold"><%= @question.member.image %><%= @question.member.name %> | score: <%= @question.question_likes.count %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
 <div class="row">
   <div class="col-md-9 mt-5 mb-5">
     <div class="border border-black-3">
       <div class="questions-content">
         <h3><%= @question.content %></h3>
       </div>
       <div class="mt-5 d-flex">
         <div class="btn btn-primary mr-2"><i class="fas fa-thumbs-up">高評価 <%= @question.question_likes.count %></i></div>
         <% if current_member == @question.member %>
           <%= link_to "編集する", edit_question_path, class:"btn btn-success ml-auto mr-2"%>
           <%= link_to "削除する", question_path(@question), method: :delete, class:"btn btn-danger mr-2", "data-confirm" => "削除してよろしいでしょうか？" %>
         <% end %>
       </div>
     </div>
     <div class="mt-2 bottom-line border border-blck"></div>

    <!--回答一覧表示-->
     <div class="mt-5">
        <h3>回答: <%= @question.answers.count %>件</h3>
        <%= render "public/answers/list", question: @question, answer_comment: @answer_comment , response: @response %>
     </div>
     <!--ここまで-->

     <!--回答フォーム-->
     <div class="row mt-5">
       <div class="col-md-2">
         <%= @member.image %>
         <%= @member.name %>
       </div>
       <div class="col-md-10">
         <div class="answer-box">
           <%= form_with model: [@question, @answer], local: true do |f| %>
            <%= f.text_area :content, placeholder:"あなたの回答で質問者の悩みを解決しましょう。", class:"w-100", rows:5 %>
            <%= f.submit "回答する", class:"btn btn-primary text-items-center" %>
           <% end %>
         </div>
       </div>
     </div>
     <!--ここまで-->

   </div>
   <div class="col-md-3">
     <div class="tag-index mb-5">
      <%= render "public/tags/list", tags: @tags %>
     </div>
   </div>
</div>
