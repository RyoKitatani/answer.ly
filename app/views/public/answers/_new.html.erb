<div class="col-md-2">
 <%= member.image %>
 <%= member.name %>
</div>
<div class="col-md-10">
 <div class="answer-box">
   <%= form_with model: [question, answer], local: true do |f| %>
    <%= f.text_area :content, placeholder:"あなたの回答で質問者の悩みを解決しましょう。", class:"w-100", rows:5 %>
    <%= f.submit "回答する", class:"btn btn-primary text-items-center" %>
   <% end %>
 </div>
</div>