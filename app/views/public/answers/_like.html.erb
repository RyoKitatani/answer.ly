<% if answer.answer_liked_by?(current_member) %>
  <%= link_to answer_answer_likes_path(answer_id: answer.id), class:"link-text", method: :delete, local: true do %>
    <div class="btn btn-primary mr-2"><i class="fas fa-thumbs-up">高評価 <%= answer.answer_likes.count %></i></div>
  <% end %>
<% else %>
  <%= link_to answer_answer_likes_path(answer_id: answer.id), class:"link-text", method: :post, local: true do %>
      <div class="btn btn-primary mr-2"><i class="fas fa-thumbs-up">高評価 <%= answer.answer_likes.count %></i></div>
  <% end %>
<% end %>