<div class="bottom-line border border-blck mb-5"></div>
 <div class="question-box mt-3 mb-3 pt-2 w-100 d-flex">
    <div class="col-2 col-md-2 col-sm-2 text-center pt-2">
      <div class="border rounded pt-2">
        <p><%= answer.answer_likes.count %></p>
      </div>
    </div>
    <div class="col-md-10">
      <div class="row">
        <h4><%== answer.content %></h4>
      </div>
    </div>
  </div>
  <div class="mt-5 d-flex">
    <% if current_member != answer.member %>
      <div id="answer_likes", class="ml-3">
        <%= render "public/answers/like", answer: answer %>
      </div>
      <% if answer.question.member == current_member %>
        <div class="ba-child">
          <% if @question.best_answer_id.nil? %>
            <%= form_with(model: @question, local: true, data: {confirm: "#{answer.member.name}さんの回答をベストアンサーにします。この修正は変更できませんが、よろしいですか？"}) do |form| %>
              <%= form.hidden_field :best_answer_id, value: answer.id %>
              <%= form.submit 'ベストアンサーにする', class:"btn btn-warning"%>
            <% end %>
          <% else %>
            <%= form_with(model: @question, local: true, data: {confirm: "#{answer.member.name}さんの回答を解除しますか？"}) do |form| %>
              <%= form.hidden_field :best_answer_id, value: nil %>
              <%= form.submit 'ベストアンサーを取り消す', class:"btn btn-warning"%>
            <% end %>
          <% end %>
         </div>
      <% end %>
    <% else %>
      <div class="d-flex ml-auto">
        <p class="mt-2"><%= answer.created_at.strftime('%Y/%m/%d %H:%M') %></p>
        <%= link_to member_path(answer.member),class:"link-text" do %>
          <span><%= attachment_image_tag answer.member, :image, size:"30x30", fallback:"no_image_icon.jpg"%></span>
          <span><%= answer.member.name %></span>
        <% end %>
      </div>
      <!--<= link_to "編集する", "#", class:"btn btn-success ml-auto mr-2"%>-->
      <%= link_to "削除する", question_answer_path(answer.question, answer), method: :delete, remote: true, class:"btn btn-danger mr-2", "data-confirm" => "削除してよろしいでしょうか？" %>
    <% end %>
  </div>
  <div class="mt-2 bottom-line border border-blck mb-5"></div>
<!--返信一覧＋フォーム-->
<%= form_with model: [answer, response], remote: true do |f| %>
    <%= f.text_area :content, placeholder:"回答に対するコメントを入力してください。", class:"w-100", id:"response_content_#{answer.id}" %>
  <div class="form-action">
    <%= f.submit "コメントする", class:"btn btn-secondary text-items-center w-100 mt-0" %>
  </div>
  <div class="mt-2 bottom-line"></div>
<% end %>
<div id="response-<%= answer.id %>">
  <%= render "public/responses/list", answer: answer %>
</div>
<!--ここまで-->
