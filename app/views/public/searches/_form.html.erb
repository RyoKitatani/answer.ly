<div class="text-center">
  <%= form_with url: search_path, class: "search-form", method: :get, local: true do |f| %>
    <div class="search-box d-flex">
        <%= f.text_field :content, class:"form-control mr-1" %>
        <%= select_tag 'model', options_for_select({ "Tag" => "tag", "Question" => "question", "Member" => "member" }) %>
        <% select_tag 'method', {"部分一致" => "partial" }, class:"btn btn-secondary" %>
        <%= f.submit :"検索", class:"btn btn-primary ml-1" %>
    </div>
<% end %>
