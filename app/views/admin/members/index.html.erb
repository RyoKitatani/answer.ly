<div class="row">
  <div class="col-md-10 offset-md-1 mt-5 pt-5">
    <h2>メンバー一覧</h2>
    <table class="table text-center mt-4">
      <thead>
        <tr class="text-center">
          <th>アイコン</th>
          <th>ユーザー名</th>
          <th>質問数</th>
          <th>回答数</th>
          <th>フォロー</th>
          <th>フォロワー</th>
          <th>質問いいね</th>
          <th>回答いいね</th>
        </tr>
      </thead>
      <tbody>
        <% @members.each do |member| %>
        <tr>
          <th><%= attachment_image_tag member, :image, size:"30x30", fallback:"no_image_icon.jpg", class:"mr-1" %></th>
          <th>
            <%= link_to admin_member_path(member) do %>
            <%= member.name %>
          <% end %>
          </th>
          <th><%= member.questions.count %></th>
          <th><%= member.answers.count %></th>
          <th><%= member.follower.count %></th>
          <th><%= member.followed.count %></th>
          <th><%= member.question_likes.count %></th>
          <th><%= member.answer_likes.count %></th>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>