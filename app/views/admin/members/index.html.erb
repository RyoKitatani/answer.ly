<div class="row">
  <div class="col-md-12 mt-3 pt-4">
    <h2 class="font-weight-bold">メンバー一覧</h2>
    <p class="mt-5">全メンバー：<%= @members.count %> 件</p>
    <table class="table text-center mt-4 table-bordered">
      <thead>
        <tr class="text-center">
          <th>アイコン</th>
          <th>ユーザー名</th>
          <th>質問数</th>
          <th>回答数</th>
          <th>フォロー</th>
          <th>フォロワー</th>
          <th>質問いいね</th>
          <th>回答いいね</th>
          <th style="width:10%;">会員ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @members.each do |member| %>
        <tr>
          <th><%= attachment_image_tag member, :image, size:"30x30", fallback:"no_image_icon.jpg", class:"mr-1" %></th>
          <th>
            <%= link_to admin_member_path(member) do %>
            <%= member.name %>
          <% end %>
          </th>
          <th><%= member.questions.count %></th>
          <th><%= member.answers.count %></th>
          <th><%= member.follower.count %></th>
          <th><%= member.followed.count %></th>
          <th><%= member.question_likes.count %></th>
          <th><%= member.answer_likes.count %></th>
          <% if member.is_deleted == false %>
            <td class="text-center btn-success font-weight-bold mt-3 mr-3", style="font-size:20px">会員</td>
          <% else %>
            <td class="text-center btn-danger font-weight-bold mt-3 mr-3", style="font-size:20px">退会</td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>