<div class="row">
  <div class="col-md-10 offset-md-1 pt-5">
    <h2 class="mt-3">質問詳細ページ</h2>
    <table class="table mt-5">
      <thead>
        <tr class="text-center">
          <th>回答状況</th>
          <th>質問タイトル</th>
          <th>回答数</th>
          <th>アイコン</th>
          <th>ユーザー</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% if @question.best_answer_id.nil? %>
            <th class="btn-info font-weight-bold mx-auto small text-center pt-3">受付中</th>
          <% else %>
           <th class="btn-danger font-weight-bold mx-auto small text-center pt-3">解決済み</th>
          <% end %>
            <td>
              <%= @question.title %>
            </td>
          <td class="text-center"><%= @question.answers.count %></td>
          <td class="text-center"><%= attachment_image_tag @question.member, :image, size:"25x25", fallback:"no_image_icon.jpg", class:"mr-1" %></td>
          <td class="text-center">
            <%= link_to admin_member_path(@question.member) do %>
              <%= @question.member.name %>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
    <h4 class="mt-5"><%= @question.title %>の回答一覧</h4>
    <table class="table mt-5">
      <thead>
        <tr class="text-center">
          <th>回答内容</th>
          <th>アイコン</th>
          <th>ユーザー</th>
        </tr>
      </thead>
      <tbody>
      <% @question.answers.each do |answer| %>
      <tr>
        <td><%= answer.content %></td>
        <td class="text-center"><%= attachment_image_tag answer.member, :image, size:"25x25", fallback:"no_image_icon.jpg", class:"mr-1" %></td>
        <td class="text-center"><%= answer.member.name %></td>
      </tr>
      <% end %>
     </tbody>
    </table>
  </div>
</div>
