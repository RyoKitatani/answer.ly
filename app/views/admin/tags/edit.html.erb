<div class="row">
  <div class="col-md-12 mt-3 pt-4">
    <h2 class="font-weight-bold"><%= @tag.name %>タグの編集画面</h2>
    <div class="text-left ml-3 mb-2 mt-3 pt-3">
      <%= form_with model: @tag, url:admin_tag_path, method: :put, local: true do |f| %>
       <%= f.label :タグ名%>
       <%= f.text_field :name, placeholder:"ここにタグ名を入力してください。", class:"w-50"%>
       <%= f.submit "変更する", class:"btn btn-success" %>
       <%= link_to "戻る", admin_tags_path, class:"btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>