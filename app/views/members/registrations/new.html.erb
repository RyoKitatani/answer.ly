<div class="mt-4">
  <span class="root-link"><%= link_to "Answer.lyトップ", root_path %> > 新規登録登録</span>
</div>
<div class="mt-3 mb-5">
  <h4><i class="fas fa-user-plus"> 新規会員登録</i></h4>
</div>

<div class="d-flex border-right-2 border-dark mb-5">
  <div class="col-md-4">
    <div class="sns-login">
      <p class="font-weight-boldte text-center">SNSアカウントで登録する</p>
    </div>
    <div class="sns-title">
      <div class="btn btn-primary w-75 mt-4 pt-3" style="height:40px">
        <i class="fab fa-facebook"> <%= link_to "Facebook", "#" %></i>
      </div>
      <div class="btn btn-primary w-75 mt-4 pt-3" style="height:40px">
        <i class="fab fa-twitter"> <%= link_to "Twitter", "#" %></i>
      </div>
      <div class="btn btn-primary w-75 mt-4 pt-3" style="height:40px">
        <i class="fab fa-instagram"> <%= link_to "Instagram", "#" %></i>
      </div>
      <div class="btn btn-primary w-75 mt-4 pt-3" style="height:40px">
        <i class="fab fa-google"> <%= link_to "Google", "#" %></i>
      </div>
      <div class="login-link text-center mt-5">
        <span>アカウントをお持ちの方は</span><%= link_to "こちらからログイン", new_member_session_path %>
      </div>
    </div>
  </div>
  <div class="col-md-7 offset-md-1">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "members/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
    <%= render "members/shared/links" %>
  </div>
</div>