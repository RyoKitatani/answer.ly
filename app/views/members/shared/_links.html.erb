<%- if controller_name != 'sessions' %>
  <i class="fas fa-sign-in-alt"></i><%= link_to "ログイン", new_session_path(resource_name),"data-turbolinks": false %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <i class="fas fa-user-plus"></i> <%= link_to "新規会員登録", new_registration_path(resource_name), class: "pr-4","data-turbolinks": false %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <i class="fas fa-key"></i> <%= link_to "パスワードを忘れた方", new_password_path(resource_name),"data-turbolinks": false %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name),"data-turbolinks": false %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name),"data-turbolinks": false %><br />
<% end %>

