<div class="border-bottom">
  <span class="root-link"><%= link_to "Answer.lyトップ", root_path,'data-turbolinks': false %>
  >
  <span class="root-link"><%= link_to "ログイン", new_member_session_path,'data-turbolinks': false %>
  >
  パスワード再設定</span>
</div>
<div class="mt-5 mb-5">
  <h2><i class="fas fa-envelope"> 認証メールの再送付</i></h2>
</div>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "members/shared/error_messages", resource: resource %>
  <table>
    <tbody>
      <tr>
        <div class="form-froup">
          <th><%= f.label :email %></th>
          <th><%= f.email_field :email,size:"50%", autofocus: true, placeholder:"メールアドレスを入力してください。", autocomplete: "email", class:"form-control", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %></th>
          <th><%= f.submit "認証メールを再送付する", class:" btn btn-success" %></th>
        </div>
      </tr>
    </tbody>
  </table>
<% end %>

