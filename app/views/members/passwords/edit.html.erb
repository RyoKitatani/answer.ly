<div class="border-bottom">
  <span class="root-link"><%= link_to "Answer.lyトップ", root_path, class:"small" %> > パスワード再設定</span>
</div>
<div class="mt-5 mb-5">
  <h2><i class="fas fa-key"> パスワード再設定</i></h2>
</div>

<div class="d-flex">
  <div class="col-md-7">
    <div class="sns-login">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "members/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <%= render "layouts/error_messages", resource: resource %>
      <table>
        <tobody>
          <tr>
            <div class="form-group">
              <th><%= f.label :password, "新しいパスワード" %><br />
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 文字以上)</em><br />
              <% end %></th>
              <th class="w-75"><%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control" %></th>
            </div>
          </tr>
          <tr>
            <div class="form-group">
              <th><%= f.label :password_confirmation, "パスワードの再確認" %><br /></th>
              <th><%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %></th>
            </div>
          </tr>
          <tr>
            <div class="form-actions">
              <th colspan="2"><%= f.submit "パスワードを変更する", class:" btn btn-success btn-lg w-100" %></th>
            </div>
          </tr>
          <tr>
            <div>
              <th colspan="2" class="shared-links"><%= render "members/shared/links" %></th>
            </div>
          <tr>
        </tbody>
      </table>
    <% end %>
    </div>
  </div>
</div>