<div class="border-bottom">
  <span class="root-link"><%= link_to "Answer.lyトップ", root_path, 'data-turbolinks': false %>
  >
  <span class="root-link"><%= link_to "ログイン", new_member_session_path,'data-turbolinks': false %>
  >
  パスワード再設定</span>
</div>
<div class="mt-5 mb-4">
  <h2><i class="fas fa-key"> パスワード再設定</i></h2>
</div>
<%= form_with model:@member, url: password_path(resource_name), local: true do |f| %>
  <%= render "layouts/error_messages", resource: resource %>
  <table>
    <tbody>
      <tr>
        <div class="form-group">
          <th><%= f.label :email %></th>
        </div>
      </tr>
      <tr>
        <div class="form-group">
          <th><%= f.email_field :email, size:"50%",placeholder:"メールアドレスを入力してください。", autofocus: true, autocomplete: "email", class:"form-control" %></th>
          <th><%= f.submit "再設定メールを送る", class:" btn btn-success" %></th>
        </div>
      </tr>
    </tbody>
  </table>
        <div class="shared-links text-link">
         <%= render "members/shared/links" %>
　　　　</div>
<% end %>
